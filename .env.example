# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/face_recognition_db
DB_USER=postgres
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=face_recognition_db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Face Recognition Settings
# Cosine similarity threshold (0.0-1.0, higher = stricter)
# Recommended: 0.3-0.4 (lenient), 0.5-0.6 (balanced), 0.7+ (strict)
FACE_RECOGNITION_THRESHOLD=0.5
MIN_FACE_SIZE=20
EMBEDDING_SIZE=512
MAX_IMAGES_PER_EMPLOYEE=50

# Data Augmentation (for CCTV robustness)
# Simulates lighting, blur, angles, noise, occlusions
USE_AUGMENTATION=true
AUGMENTATIONS_PER_IMAGE=2
INCLUDE_ORIGINAL_IMAGES=true

# FAISS Configuration (optional)
USE_FAISS=true
FAISS_INDEX_PATH=./data/faiss_index.bin

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://wnm8dbn7-5173.inc1.devtunnels.ms/

# File Upload
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
